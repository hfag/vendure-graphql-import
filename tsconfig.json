{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
